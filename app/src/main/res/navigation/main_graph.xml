<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.kpfu.itis.paramonov.androidtasks.ui.fragments.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_filmsFragment"
            app:destination="@id/filmsFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="ru.kpfu.itis.paramonov.androidtasks.ui.fragments.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/filmsFragment"
        android:name="ru.kpfu.itis.paramonov.androidtasks.ui.fragments.FilmsFragment"
        android:label="FilmsFragment" >
        <action
            android:id="@+id/action_filmsFragment_to_addFilmFragment"
            app:destination="@id/addFilmFragment" />
        <action
            android:id="@+id/action_filmsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_filmsFragment_to_filmInfoFragment"
            app:destination="@id/filmInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFilmFragment"
        android:name="ru.kpfu.itis.paramonov.androidtasks.ui.fragments.AddFilmFragment"
        android:label="AddFilmFragment" >
        <action
            android:id="@+id/action_addFilmFragment_to_filmsFragment"
            app:destination="@id/filmsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.kpfu.itis.paramonov.androidtasks.ui.fragments.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/filmInfoFragment"
        android:name="ru.kpfu.itis.paramonov.androidtasks.ui.fragments.FilmInfoFragment"
        android:label="FilmInfoFragment" />
</navigation>