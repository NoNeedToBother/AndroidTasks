<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/tv_question_numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"/>
    
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_question_numb"
        app:layout_constraintBottom_toTopOf="@+id/btn_submit_ans"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/submit_ans"
        android:layout_marginBottom="64dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>